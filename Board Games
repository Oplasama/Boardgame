from django.contrib.auth.models import User
from django.db import models
from django.utils import timezone

class Order(models.Model):
    orderer = models.ForeignKey(User, related_name='orders', on_delete=models.CASCADE)  # Người đặt hàng
    owner = models.ForeignKey(User, related_name='owned_orders', on_delete=models.CASCADE)  # Chủ sở hữu board game
    order_date = models.DateField(default=timezone.now)  # Ngày đặt hàng
    return_date = models.DateField()  # Ngày trả lại
    boardgame_id = models.IntegerField()  # ID của board game

    def __str__(self):
        return f"Order by {self.orderer} for BoardGame ID {self.boardgame_id} on {self.order_date}"

    
